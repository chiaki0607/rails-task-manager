<div class="container">
  <h1><%= @task.title %></h1>
  <%= link_to 'Edit this task', edit_path(@task) %>

  <div class="card-body">
    <%= @task.details %>
  </div>
  <p>
    <% if @task.completed == true %>
      <span><i class="fa-regular fa-square-check"></i></span>
      This task is comleted.
    <% else %>
      <span><i class="fa-regular fa-square"></i></span>
      This task is not comleted yet.
    <% end %>
  </p>
  <p><%= link_to 'Back to list', tasks_path %></p>
</div>
